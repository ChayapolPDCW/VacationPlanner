generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  total_plan_created Int? @default(0)
  total_like_received Int? @default(0)
  current_rank String @default("Beginner")
  createdAt DateTime @default(now())
  ProfilePicture String? 
}

model travel_plans {
  id Int @id @default(autoincrement())
  user_id Int
  title String
  start_date DateTime
  end_date DateTime
  itinerary Json?
  visibility Visibility @default(private)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum Visibility {
  public
  private
}
